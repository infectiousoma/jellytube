<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <LangVersion>latest</LangVersion>
    <GenerateRuntimeConfigurationFiles>true</GenerateRuntimeConfigurationFiles>
    <AssemblyName>Jellyfin.Plugin.JellyTube</AssemblyName>
    <RootNamespace>Jellyfin.Plugin.JellyTube</RootNamespace>
    <!-- Disable auto-generated assembly attributes to avoid conflicts -->
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <GenerateTargetFrameworkAttribute>false</GenerateTargetFrameworkAttribute>
  </PropertyGroup>

  <ItemGroup>
    <!-- Match these to your Jellyfin server's Target ABI if different -->
    <PackageReference Include="Jellyfin.Controller" Version="10.10.7" />
    <PackageReference Include="Jellyfin.Model" Version="10.10.7" />
    <PackageReference Include="Jellyfin.Common" Version="10.10.7" />
  </ItemGroup>

  <ItemGroup>
    <Compile Remove="Channels/YtBridgeChannel.cs" />
    <Compile Remove="Providers/*.cs" />
    <Compile Remove="MediaSources/*.cs" />
  </ItemGroup>

<ItemGroup>
  <EmbeddedResource Include="Web/jellytube.html" LogicalName="Jellyfin.Plugin.JellyTube.Web.jellytube.html" />
</ItemGroup>

</Project>
